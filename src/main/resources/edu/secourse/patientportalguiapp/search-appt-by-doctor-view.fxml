<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="400.0"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.secourse.patientportalguiapp.controllers.SearchApptByDoctorView">

    <children>
        <Label alignment="TOP_CENTER" text="Search by Doctor ID" textFill="#309423">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <GridPane alignment="CENTER" hgap="10.0" vgap="20.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints halignment="LEFT"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <children>
                <Label text="Doctor ID" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>

                <TextField fx:id="doctorIdField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Button fx:id="searchButton" text="Search"
                        onAction="#onSearchButtonClick"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>

            <VBox.margin>
                <Insets top="40.0"/>
            </VBox.margin>
        </GridPane>

        <TextArea fx:id="outputBox" prefHeight="150.0" prefWidth="300.0" wrapText="true" disable="true">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </TextArea>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="backButton" text="Back" onAction="#onBackButtonClick"/>
            </children>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </HBox>

    </children>
</VBox>
