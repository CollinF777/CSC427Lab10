<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.secourse.patientportalguiapp.controllers.SearchApptByPatientController">

    <children>
        <Label alignment="TOP_CENTER" text="Search by Patient ID" textFill="#309423">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <GridPane alignment="CENTER" hgap="10.0" vgap="20.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints halignment="LEFT" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <Label text="Patient ID" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <TextField fx:id="patientIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Button fx:id="searchButton" onAction="#onSearchButtonClick" text="Search" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>

            <VBox.margin>
                <Insets top="40.0" />
            </VBox.margin>
        </GridPane>

        <TextArea fx:id="outputBox" disable="true" prefHeight="150.0" prefWidth="300.0" wrapText="true">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </TextArea>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="backButton" onAction="#onBackButtonClick" text="Back" />
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>

    </children>
</VBox>
