<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.secourse.patientportalguiapp.controllers.CreateDoctorController">
    <children>
        <Label alignment="TOP_CENTER" text="Create a doctor" textFill="#309423">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Label fx:id="actionText" textFill="#1b2e90">
            <font>
                <Font size="15.0" />
            </font></Label>
        <GridPane alignment="CENTER" hgap="10.0" vgap="20.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints halignment="LEFT" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin></Label>
                <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Last Name:" GridPane.rowIndex="1">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Username:" GridPane.rowIndex="2">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Password:" GridPane.rowIndex="3">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </GridPane>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="backButton" onAction="#onBackButtonClick" text="Back" />
                <Region prefWidth="20" />
                <Button fx:id="createDoctorButton" onAction="#onCreateDoctorButtonClick" text="Create Doctor" />
            </children>
            <VBox.margin>
                <Insets top="30" />
            </VBox.margin>
        </HBox>

    </children>
</VBox>
